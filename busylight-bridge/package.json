{
  "name": "busylight-bridge",
  "version": "1.0.0",
  "description": "Local bridge service for connecting web-hosted PWAs to Kuando Busylight devices",
  "main": "main.js",
  "author": "Autocab365",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder --win --x64",
    "build:win": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable --x64",
    "build:installer": "electron-builder --win nsis --x64",
    "pack": "electron-builder --dir",
    "clean": "rm -rf node_modules package-lock.json dist",
    "icons": "node create-icons.js"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.autocab365.busylight-bridge",
    "productName": "Busylight Bridge",
    "copyright": "Copyright Â© 2024 Autocab365",
    "npmRebuild": false,
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "assets/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/**/canvas/**",
      "!node_modules/**/node-gyp/**",
      "!node_modules/**/*.md",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/.github/**"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "shortcutName": "Busylight Bridge",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true
    },
    "portable": {
      "artifactName": "BusylightBridge-Portable.exe"
    }
  }
}
